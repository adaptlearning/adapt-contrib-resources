                  }
                },
                "custom5": {
                  "type": "string",
                  "title": "Custom type 5",
                  "default": "Custom type 5",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "custom6": {
                  "type": "string",
                  "title": "Custom type 6",
                  "default": "Custom type 6",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "custom7": {
                  "type": "string",
                  "title": "Custom type 7",
                  "default": "Custom type 7",
                  "_adapt": {
